<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".PayOutActivity">

    <ImageButton
        android:id="@+id/backbutton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        android:text="Button"
        android:background="@android:color/transparent"
        android:src="@drawable/baseline_keyboard_arrow_left_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/i"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Edit"
        android:textColor="@color/teal_700"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="95dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:elevation="2dp"
        android:background="@drawable/profile_edit_text_shape"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView22">

        <TextView
            android:layout_width="42dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Name:"
            android:fontFamily="@font/h"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginLeft="8dp"/>

        <EditText
            android:id="@+id/adminName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:paddingLeft="6dp"
            android:textColor="@color/black"
            android:fontFamily="@font/f"
            android:background="@android:color/transparent"
            android:inputType="textPersonName"
            android:hint="Admin" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:elevation="2dp"
        android:background="@drawable/profile_edit_text_shape"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView22">

        <TextView
            android:layout_width="42dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Address:"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/h"
            android:layout_marginLeft="8dp"/>

        <EditText
            android:id="@+id/adminAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:paddingLeft="6dp"
            android:textColor="@color/black"
            android:fontFamily="@font/f"
            android:background="@android:color/transparent"
            android:inputType="textMultiLine"
            android:hint="L-54, Hindalco Colony ,Sonebhadra,231217"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:elevation="2dp"
        android:background="@drawable/profile_edit_text_shape"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView22">

        <TextView
            android:layout_width="42dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Phone:"
            android:textSize="20sp"
            android:fontFamily="@font/h"
            android:textColor="@color/black"
            android:layout_marginLeft="8dp"/>

        <EditText
            android:id="@+id/phoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:paddingLeft="6dp"
            android:fontFamily="@font/f"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@android:color/transparent"
            android:inputType="phone"
            android:hint="9111111110" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:elevation="2dp"
        android:background="@drawable/profile_edit_text_shape"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView22">

        <TextView
            android:layout_width="42dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:fontFamily="@font/h"
            android:text="Payment Mode:"
            android:textColor="@color/black"
            android:textSize="20sp" />
        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="200dp"
            android:layout_height="34dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/cashondelivery" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:elevation="2dp"
        android:background="@drawable/profile_edit_text_shape"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView22">

        <TextView
            android:layout_width="42dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Total Amount:"
            android:textSize="20sp"
            android:fontFamily="@font/h"
            android:textColor="@color/black"
            android:layout_marginLeft="8dp"/>

        <EditText
            android:id="@+id/totalAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:paddingLeft="6dp"
            android:fontFamily="@font/f"
            android:background="@android:color/transparent"
            android:inputType="none"
            android:hint="$250"
            android:paddingEnd="32dp"
            android:textColor="@color/teal_700"
            android:textStyle="bold"
            android:layout_marginEnd="4dp"
            android:gravity="end"/>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/placeOrder"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/profile_edit_text_shape"
        android:elevation="5dp"
        android:fontFamily="@font/c"
        android:text="Place My Order"
        android:textAllCaps="false"
        android:textColor="@color/bluish"
        android:textSize="20sp" />


</LinearLayout>